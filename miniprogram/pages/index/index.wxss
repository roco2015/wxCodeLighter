/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.add-btn {
  margin-top: 30rpx;
  color: #333;
}

.code-wrap {
  width: 100%;
  color: #aaa;
}

.code-box {
  padding: 30rpx
}
.code-box p {
  display: flex;
  margin: 5rpx 0;
  padding: 10rpx 0;
}
.code-box p .name {
  flex: 1;
}